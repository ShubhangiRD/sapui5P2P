<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Payment Method List"
		class="popx sapUiPopupWithPadding"
		items="{paymentmethod>/PaymentMethods}"
		search="_handleValueHelpSearchPayment"
		confirm="_handleValueHelpClosePayment"
		cancel="_handleValueHelpClosePayment">
		<StandardListItem
			title="{paymentmethod>paymentmethodno}"
			info="{paymentmethod>Description}"/>
	</SelectDialog>
</core:FragmentDefinition>