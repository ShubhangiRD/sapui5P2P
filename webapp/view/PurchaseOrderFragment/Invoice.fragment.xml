						<f:FormElement label="Dp Categories" class="sapUiTinyMarginTop">
							<f:fields>
								<Select id="DpCategories" class="sapUiTinyMarginTop">
									<items>
										<core:Item text=" " key=" "/>
										<core:Item text=" " key=" "/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Differencial Invoicing" class="sapUiResponsiveMargin ">
							<f:fields>
								<Select id="DiffInvoicing" class="sapUiTinyMarginTop">
									<items>
										<core:Item text=" " key=" "/>
										<core:Item text=" " key=" "/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
								<f:FormElement label="Tax Code" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="TaxCodeInvoic" maxLength="2" textFormatMode="KeyValue" class="sapUiTinyMarginTop"></Input>
							</f:fields>
						</f:FormElement>
				
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label=" " class="sapUiTinyMarginTop">
