						</f:FormElement>
						<f:FormElement label=" " class="sapUiTinyMarginTop">
							<f:fields>
								<CheckBox id="FinalInvoice" class="sapUiTinyMarginTop" text="Final Invoice"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label=" " class="sapUiTinyMarginTop">
							<f:fields>
								<CheckBox id="GRBasedIV" class="sapUiTinyMarginTop" text="GR Based IV"/>
							</f:fields>
