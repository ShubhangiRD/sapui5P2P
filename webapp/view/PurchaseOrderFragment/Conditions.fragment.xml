<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<t:Table id="Conditions" rows="{ path: 'PurchaseModel>/TempContract/PoCondSet'}" visibleRowCount="5" selectionMode="MultiToggle">
		<t:extension>
			<OverflowToolbar>
				<Title text="Conditions"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://add" type="Transparent" id="AddConditions" class="remove-attr" tooltip="Add Row" press="AddConditionItemsHeader"/>
				<Button icon="sap-icon://delete" enabled="{=${PurchaseModel>/TempContract/RebateConditionItems}.length > 0}" type="Transparent"
					tooltip="Delete Row" press="onDeleteItemBank"/>
			</OverflowToolbar>
		</t:extension>
		<t:columns>
			<t:Column width="6rem" hAlign="Center">
				<Label text="Non Active "/>
				<t:template>
					<Input id="idnonActive" class="mtid" textFormatMode="KeyValue" editable="{EditModel>/isEditable}" value="{PurchaseModel>Condisacti}"></Input>
				</t:template>
			</t:Column>
			<t:Column width="5rem" hAlign="Center">
				<Label text="Cond. Type "/>
				<t:template>
					<Input id="idcntyy" class="mtid" textFormatMode="KeyValue" editable="{EditModel>/isEditable}" value="{PurchaseModel>CondType}"></Input>
				</t:template>
			</t:Column>
			<t:Column hAlign="Center" width="9rem">
				<Label text="Names"/>
				<t:template>
					<Input class="desc1" id="idnameVendor" textFormatMode="KeyValue" editable="{EditModel>/isEditable}"></Input>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Amount"/>
				<t:template>
					<Input id="idAmountC" value="{PurchaseModel>CondValue}" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="CurrencyKey"/>
				<t:template>
					<Input id="idcucy" class="measure1" value="{PurchaseModel>CurrencyIso}" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Per"/>
				<t:template>
					<Input id="idperr" class="price1" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Condition Value"/>
				<t:template>
					<Input id="ConditionValue1" class="price1" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Currecy"/>
				<t:template>
					<Input id="CurrC" class="price1" value="{PurchaseModel>Currency}" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Status"/>
				<t:template>
					<Input id="StatC" class="price1" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Num Cco"/>
				<t:template>
					<Input id="NumCC" class="price1" value="{PurchaseModel>Numconvert}" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Order Unit Oun"/>
				<t:template>
					<Input id="OrderunitC" class="price1" value="{PurchaseModel>/Unitmeasur}" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="CConDen"/>
				<t:template>
					<Input id="CConDenC" class="price1" value="{PurchaseModel>Denominato}" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Unit of Measure "/>
				<t:template>
					<Input id="iduomm" textFormatMode="KeyValue" value="{PurchaseModel>CondUnit}" editable="{EditModel>/isEditable}"></Input>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Condition Value"/>
				<t:template>
					<Input id="ConditionValue2" class="price1" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="CdCurr"/>
				<t:template>
					<Input id="idCdCurr" class="price1" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
			<t:Column width="9rem" hAlign="Center">
				<Label text="Stat"/>
				<t:template>
					<CheckBox id="idstatt" class="price1" editable="{EditModel>/isEditable}"/>
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
</core:FragmentDefinition>