<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="materialform" editable="true" class="sapUiTinyMarginTop">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
					emptySpanM="4" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Material Group" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="MaterialGrp" textFormatMode="KeyValue" showSuggestion="true" showValueHelp="true" value="{PurchaseModel>/TempContract/PoitemSet/MatlGroup}"
								 editable="{EditModel>/isEditable}">
								
								</Input>
								<CheckBox id="idrelevent" editable="{EditModel>/isEditable}"  text="IUID-Relevent"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Vendor Mat.no" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="vendormatno" editable="{EditModel>/isEditable}"  value="{PurchaseModel>/TempContract/PoitemSet/VendMat}"  textFormatMode="KeyValue"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Vendor Sub-range" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="vendorsubrang" editable="{EditModel>/isEditable}" value="{PurchaseModel>/TempContract/PoitemSet>/VendPart}"  textFormatMode="KeyValue"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Batch" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="idbatchMD" editable="{EditModel>/isEditable}"  value="{PurchaseModel>/TempContract/PoitemSet>/Batch}" textFormatMode="KeyValue"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Revision Level " class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="RevisionLevel"  textFormatMode="KeyValue" showSuggestion="true" showValueHelp="true"
									value="{PurchaseModel>/TempContract/PoitemSet>/RevLev}" valueHelpRequest="handleRevisionLevel" suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }"
									suggestionItemSelected="suggestionRevisionLevel" editable="{EditModel>/isEditable}">
									<suggestionItems>
										<core:ListItem key="{Lookup>}" text="{Lookup>}" additionalText="{Lookup>}"/>
									</suggestionItems>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="EAN/UPC" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="ideadupc" editable="{EditModel>/isEditable}"  textFormatMode="KeyValue" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Vendor Batch" class="sapUiTinyMarginTop">
							<f:fields>
								<Input id="vendorbatch" value="{PurchaseModel>/TempContract/PoitemSet>/Vendrbatch}" editable="{EditModel>/isEditable}" textFormatMode="KeyValue" />
								<CheckBox id="idInfoUpdate" text="InfoUpdate" editable="{EditModel>/isEditable}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>