<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
<VBox class="sapUiSmallMargin">
								<f:Form id="idPOAccountAssignment" editable="true">
									<f:layout>
										<f:ResponsiveGridLayout  labelSpanXL="6" labelSpanL="6" labelSpanM="6" labelSpanS="6" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0"
											emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false"/>
									</f:layout>
									<f:formContainers>
										<f:FormContainer>
											<f:formElements>
												<f:FormElement label="G/L Account">
													<f:fields>
														<Input id="idGLAccount1" textFormatMode="KeyValue" editable="{EditModel>/isEditable}"  ></Input>
													</f:fields>
												</f:FormElement>
												<f:FormElement label="Business Area">
													<f:fields>
														<Input type="Text" maxLength="3" id="idBusinessArea1" 
														value="{GRItemsModel>/CoBusproc}" 
															editable="{EditModel>/isEditable}"></Input>
													</f:fields>
												</f:FormElement>
												<f:FormElement label="Cost Center">
													<f:fields>
														<Input type="Text" maxLength="4" id="idCostCenter1" editable="{EditModel>/isEditable}" 	value="{GRItemsModel>/Costcenter}" />
													</f:fields>
												</f:FormElement>
												<f:FormElement label="Profit Center">
													<f:fields>
														<Input type="Text" maxLength="4" id="idProfitCenter1" editable="{EditModel>/isEditable}"	value="{GRItemsModel>/ProfitCtr}" />
													</f:fields>
												</f:FormElement>
												<f:FormElement label="Functional Area">
													<f:fields>
														<Input type="Text" id="idFunctionalArea"  editable="{EditModel>/isEditable}" 	value="{GRItemsModel>/FuncAreaLong}" />
													</f:fields>
												</f:FormElement>
											</f:formElements>
										</f:FormContainer>
									</f:formContainers>
								</f:Form>
							</VBox>
</core:FragmentDefinition>