<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin ">
								<f:Form id="idMaterialForm"   editable="true">
									<f:layout>
										<f:ResponsiveGridLayout labelSpanXL="2"  labelSpanL="2" labelSpanM="2" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
											emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
									</f:layout>
									<f:formContainers>
										<f:FormContainer>
											<f:formElements>
												<f:FormElement label="Material"  >
													<f:fields>
														<Input id="Material" value="{GRItemsModel>/Material}" editable="{EditModel>/isEditable}"/>
														<Input id="idMatNo" value=" " editable="{EditModel>/isEditable}" >
															<layoutData>
																<l:GridData span="XL1 L2 M2 S4"/>
															</layoutData>
														</Input>
													</f:fields>
												</f:FormElement>
												<f:FormElement label="Vendor Material no"  >
													<f:fields>
														<Input id="VMatNo" value="{GRItemsModel>/Material} {GRItemsModel>/Vendor}" editable="{EditModel>/isEditable}"/>
													</f:fields>
												</f:FormElement>
												<f:FormElement label="Material Group" >
													<f:fields>
														<Input id="idMatGrp"   editable="{EditModel>/isEditable}" >
															<layoutData>
																<l:GridData span="XL1 L2 M2 S4"/>
															</layoutData>
														</Input>
													<!--	<Input value="{GRItemsModel>/Material}"  id="idmatGrptwo" editable="{EditModel>/isEditable}" />
												-->	</f:fields>
												</f:FormElement>
											</f:formElements>
										</f:FormContainer>
									</f:formContainers>
								</f:Form>
							</VBox>
</core:FragmentDefinition>