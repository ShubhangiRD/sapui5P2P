<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<form:SimpleForm id="FormChange2payment" editable="true" layout="ResponsiveGridLayout" title="Payment Data " labelSpanXL="4" labelSpanL="4"
			labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3"
			columnsL="3" columnsM="1" class="myFormMarginBottom" singleContainerFullSize="false">
			<form:content>
				<core:Title text=""/>
				<Label text="Payment Terms" fieldGroupIds="Ztermb" required="true"/>
				<Input id="idpaymentterms" fieldGroupIds="Ztermb" textFormatMode="KeyValue" showSuggestion="true" value="{VendorModel>/PaytTerms}"
					showValueHelp="true" valueHelpRequest="handlePaymenttermsHelp" suggestionItems="{ path: 'Lookup>/PaymentTermsList' }"
					suggestionItemSelected="onSuggestpaymentterms" editable="{EditModel>/isEditable}" >
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="Cr Memo Terms" fieldGroupIds="Guzteb"/>
				<Input id="idmemoterms" fieldGroupIds="Guzteb" textFormatMode="KeyValue" showSuggestion="true" showValueHelp="true"
					editable="{EditModel>/isEditable}" value="{VendorModel>/Crmemoterms}" valueHelpRequest="handlePaymenttermsHelp"
					suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }" suggestionItemSelected="onSuggestmemoterms">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="Chk Cashing time" fieldGroupIds="Kultgb"/>
				<Input id="idchkcashingtime" value="{VendorModel>/Chkcashngtime}" fieldGroupIds="Kultgb" editable="{EditModel>/isEditable}"/>
				<core:Title text=""/>
				<Label text="Tolerance Group" fieldGroupIds="Togrub"/>
				<Input id="idtolerencegp" fieldGroupIds="Togrub" textFormatMode="KeyValue" showSuggestion="true" showValueHelp="true"
					editable="{EditModel>/isEditable}" value="{VendorModel>/Tolerancegroup}" valueHelpRequest="handleToleranceGrpValueHelp"
					suggestionItems="{ path: 'Lookup>/ToleranceGroupList' }" suggestionItemSelected="onSuggestTolerence">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text=""/>
				<CheckBox id="checkdouble" text="Check Double inv" editable="{EditModel>/isEditable}"/>
			</form:content>
		</form:SimpleForm>
		<form:SimpleForm id="FormChange3payment" editable="true" layout="ResponsiveGridLayout" title="Automatic Payment Transaction "
			labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
			emptySpanS="0" columnsXL="3" columnsL="3" columnsM="1" class="myFormMarginBottom" singleContainerFullSize="false">
			<form:content>
				<core:Title text=""/>
				<Label text="Payment Methods" required="true" fieldGroupIds="Zwelsb"/>
				<Input id="idpaymethod" maxLength="2" fieldGroupIds="Zwelsb" editable="{EditModel>/isEditable}" value="{VendorModel>/Paymentmethods}"
					showValueHelp="true" class="sapUiSmallMarginTop" valueHelpRequest="handlePaymentmethod"
					suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }" suggestionItemSelected="onSuggestPaymentMethod" >
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="Alternate.Payee" fieldGroupIds="Lnrzbb"/>
				<Input id="idAlternate.Payee" fieldGroupIds="Lnrzbb" maxLength="10" value="{VendorModel>/Alternatpayee}" showValueHelp="true"
					editable="{EditModel>/isEditable}" valueHelpRequest="handleAlternatePayee" suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }"
					suggestionItemSelected="onSuggestAlternatePayee">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="B/Exch/Limit" fieldGroupIds="Webtrb"/>
				<Input id="BExchLimit" maxLength="13" fieldGroupIds="Webtrb" value="{VendorModel>/B/exchlimit}" editable="{EditModel>/isEditable}"/>
				<Label text=""/>
				<CheckBox id="idindividualpmnt" fieldGroupIds="Xporeb" text="Individual Pmnt" editable="{EditModel>/isEditable}"/>
				<core:Title text=""/>
				<Label text="Payment Block" fieldGroupIds="Zahlsb"/>
				<Input id="idpayBlock" maxLength="1" fieldGroupIds="Zahlsb" showValueHelp="true" valueHelpRequest="handlePaymentBlock"
					editable="{EditModel>/isEditable}" value="{VendorModel>/Paymentblock}" suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }"
					suggestionItemSelected="onSuggestPaymentBlock">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="House Bank " fieldGroupIds="Hbkidb"/>
				<Input id="idHousebank" maxLength="5" fieldGroupIds="Hbkidb" showValueHelp="true" valueHelpRequest="handleHousebank"
					editable="{EditModel>/isEditable}" value="{VendorModel>/HouseBank}" suggestionItems="{ path: 'Lookup>/HouseBankList' }"
					suggestionItemSelected="onSuggesthousebank">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="Grouping Keyk " fieldGroupIds="Mgrupb"/>
				<Input id="idHGrouping" maxLength="2" fieldGroupIds="Mgrupb" showValueHelp="true" valueHelpRequest="handleGrouping"
					editable="{EditModel>/isEditable}" value="{VendorModel>/Groupingkey}" suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }"
					suggestionItemSelected="onSuggestGrouping">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="Tolerence Group" fieldGroupIds="Togrrb"/>
				<Input id="ifTolerencegrp" fieldGroupIds="Togrrb" maxLength="4" textFormatMode="KeyValue" showSuggestion="true"
					editable="{EditModel>/isEditable}" value="{VendorModel>/Tolerancegrp}" showValueHelp="true" valueHelpRequest="handleToleranceGrpValueHelp"
					suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }" suggestionItemSelected="onSuggestTolerence">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text=""/>
				<CheckBox id="alternatepayiddoc" fieldGroupIds=" " text="AltPayDoc" editable="{EditModel>/isEditable}"/>
			</form:content>
		</form:SimpleForm>
	</VBox>
</core:FragmentDefinition>