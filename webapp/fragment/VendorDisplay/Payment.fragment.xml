<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table" xmlns:u="sap.ui.unified">
	<VBox class="sapUiSmallMargin">
		
		<VBox>
			<t:Table id="idBankDetails" rows="{ path: 'BankModel>/'}"  visibleRowCount="5" selectionMode="MultiToggle" firstVisibleRow="3" >
				<t:extension>
					<OverflowToolbar>
						<Title text="Bank Details"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" type="Transparent" id="idAddbutton" class="remove-attr" tooltip="Add Row" press="onAddNewItemBnk"/>
						<Button icon="sap-icon://delete" enabled="{=${Vendor>/TempContract/RebateConditionItems}.length > 0}" type="Transparent"
							tooltip="Delete Row" press="onDeleteItemBank"/>
					</OverflowToolbar>
				</t:extension>
				<t:columns>
					<t:Column width="5rem" hAlign="Center">
						<Label text="Country " fieldGroupIds="Banksd"/>
						<t:template>
							<Input id="idCtry" fieldGroupIds="Banksd" class="mtid" textFormatMode="KeyValue" editable="{EditModel>/isEditable}" placeholder=" EnterCtry" showSuggestion="true" showValueHelp="true"
								value="{BankModel>/BankCountry}" valueHelpRequest="handleValueHelpCountryCode" suggestionItems="{ path: 'Lookup>/CountryCodeRegion' }"
								suggestionItemSelected="onSuggestCtry" >
								<suggestionItems>
									<core:ListItem key="{Lookup>Land1}" text="{Lookup>Landx}" additionalText="{Lookup>Land1}"/>
								</suggestionItems>
							</Input>
						</t:template>
					</t:Column>
					<t:Column hAlign="Center" width="9rem">
						<Label text="Bank Key " fieldGroupIds="Bankld"/>
						<t:template>
							<Input class="desc1" id="nBankKey" textFormatMode="KeyValue" editable="{EditModel>/isEditable}"  placeholder="Enter Bank Key" showSuggestion="true" showValueHelp="true"
								valueHelpRequest="handleBankKey" suggestionItems="{ path: 'Lookup>/BankKeyList' }" value="{BankModel>/BankKey}"
								suggestionItemSelected="onSuggestBankKey">
								<suggestionItems>
									<core:ListItem key="{Lookup>Description}" text="{Lookup>Materialno}" additionalText="{Lookup>Description}"/>
								</suggestionItems>
							</Input>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="Bank Account " fieldGroupIds="Banknd"/>
						<t:template>
							<Input id="BankAccount" fieldGroupIds="Banknd" value="{BankModel>/BankAccount}" editable="{EditModel>/isEditable}" placeholder="Enter Bank Account"/>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="Account Holder" fieldGroupIds="Koinhd"/>
						<t:template>
							<Input id="AccountHolder"  fieldGroupIds="Koinhd" class="measure1" value="{BankModel>Accountholder}" editable="{EditModel>/isEditable}"/>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="AK"/>
						<t:template>
							<Input id="idAK" textFormatMode="KeyValue" editable="{EditModel>/isEditable}" showSuggestion="true" showValueHelp="true" value="{VendorModel>idAK}"
								valueHelpRequest="handleValueHelpAK" suggestionItems="{ path: 'Lookup>/POPlant' }" suggestionItemSelected="onSuggestAK">
								<suggestionItems>
									<core:ListItem key="{Lookup>Bwkey}" text="{Lookup>Bwkey}" additionalText="{Lookup>Bwkey}"/>
								</suggestionItems>
							</Input>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="IBAN Value"/>
						<t:template>
							<Input id="IBANValue"  value="{BankModel>bankname}" editable="{EditModel>/isEditable}"/>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="BnkT"/>
						<t:template>
							<Input id="BnkT"  value="{BankModel>IBANValue}" editable="{EditModel>/isEditable}"/>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="Reference Details" fieldGroupIds="Bkrefd"/>
						<t:template>
							<Input id="Referencedetails" fieldGroupIds="Bkrefd"  value="{BankModel>Reference}" editable="{EditModel>/isEditable}"/>
						</t:template>
					</t:Column>
					<t:Column width="9rem" hAlign="Center">
						<Label text="Bank Name "/>
						<t:template>
							<Input id="bankname"  value="{BankModel>Referencedetails}" editable="{EditModel>/isEditable}"/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</VBox>
		<form:SimpleForm id="SimpleForm3" title="Payment Transactions" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4"
			labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3"
			columnsL="3" columnsM="1" class="myFormMargin" singleContainerFullSize="false">
			<form:content>
				<core:Title text=" "/>
				<Label text="Alternate Pay" fieldGroupIds="Lnrzaa"  />
				<Input id="AlternatePay" maxLength="10" fieldGroupIds="Lnrzaa"   change="changeVenodr" type="Text" value="{VendorModel>/Alternatpayee}"  editable="{EditModel>/isEditable}"
					class="searchBox" placeholder="Alternate Pay" showSuggestion="true" showValueHelp="true" valueHelpRequest="handleAlternatePayee"
					suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }" suggestionItemSelected="onSuggestAlternatePay">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="ISR Number" fieldGroupIds="Esrnra"/>
				<Input id="ISRNumber" maxLength="11" value="{VendorModel>/ISRNumber}" fieldGroupIds="Esrnra" class="InputBoxContainer" placeholder="ISR Number" editable="{EditModel>/isEditable}"/>
				<Label text="DME indicator" fieldGroupIds="Dtamsa"/>
				<Input id="DMEindicator" maxLength="1" value="{VendorModel>/DMEIndicator}"  fieldGroupIds="Dtamsa"  change="changeVenodr" type="Text" editable="{EditModel>/isEditable}"
					class="searchBox" placeholder="DME indicator" showSuggestion="true" showValueHelp="true" valueHelpRequest="handleDMEindicator"
					suggestionItems="{ path: 'Lookup>/DisplyaVendorList' }" suggestionItemSelected="onSuggestDMEindicator">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<Label text="Instruction Key" fieldGroupIds="Dtawsa"/>
				<Input id="idInstructionKey"  value="{VendorModel>/Instructionkey}" fieldGroupIds="Dtawsa"  maxLength="4"  change="changeVenodr" type="Text" editable="{EditModel>/isEditable}"
					class="searchBox" placeholder="InstructionKey" showSuggestion="true" showValueHelp="true" valueHelpRequest="handleInstructionKey"
					suggestionItems="{ path: 'Lookup>/InstructionKeyList' }" suggestionItemSelected="onSuggestidInstructionKey">
					<suggestionItems>
						<core:ListItem key="{Lookup>Lifnr}" text="{Lookup>Name1}" additionalText="{Lookup>Lifnr}"/>
					</suggestionItems>
				</Input>
				<core:Title text=" "/>
				
				<CheckBox id="IndividualEntries"  fieldGroupIds="Lnrzaa" text="Individual Entries" editable="{EditModel>/isEditable}">
				</CheckBox>
				<CheckBox id="ReferenceEntries" fieldGroupIds="Lnrzaa" text="Entries for Reference." editable="{EditModel>/isEditable}">
				
				</CheckBox>
				<!--<CheckBox text="Individual Entries"></CheckBox>-->
				<!--	<CheckBox text="Entries for Reference"></CheckBox>-->
			</form:content>
		</form:SimpleForm>
	</VBox>
</core:FragmentDefinition>